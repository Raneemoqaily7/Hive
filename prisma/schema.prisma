generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://BlogHive:BlogHive@cluster0.h3qmc.mongodb.net/blog?retryWrites=true&w=majority&appName=Cluster0"
}

model Account {
  id                String @id @map("_id")
  access_token      String
  expires_at        BigInt
  id_token          String
  provider          String
  providerAccountId String
  scope             String
  token_type        String
  type              String
  userId            String

  @@unique([provider, providerAccountId])
}

model Blog {
  id        String   @id @map("_id")
  catSlug   String
  createdAt DateTime @db.Date
  desc      String
  img       String?
  slug      String   @unique
  title     String
  userEmail String
  views     BigInt
}

model Category {
  id    String @id @map("_id")
  img   String
  slug  String @unique
  title String
}

model Comment {
  id        String   @id @map("_id")
  createdAt DateTime @db.Date
  desc      String
  postSlug  String
  userEmail String
}

model Session {
  id           String   @id @map("_id")
  expires      DateTime @db.Date
  sessionToken String   @unique
  userId       String
}

model User {
  id            String  @id @map("_id")
  email         String  @unique
  /// Could not determine type: the field only had null or empty values in the sample set.
  emailVerified Json?
  image         String
  name          String
  password      String?
}

model VerificationToken {
  /// Field referred in an index, but found no data to define the type.
  id    Json?  @id @map("_id")
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  token Json?  @unique

  @@unique([id, token])
}
